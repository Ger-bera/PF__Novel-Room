<h1>編集ページ</h1>
<div>
  <%= form_with model:@user, local:true do |f| %>
    <div class="form-group">
      <%= f.label :name, "ユーザー名" %>
      <%= f.text_field :name, autofocus: true %>
    </div>
    <div class="form-group">
      <%= f.label :email, "メールアドレス" %>
      <%= f.text_field :email %>
    </div>

    <%= f.submit "編集内容を保存" %>

  <% end %>

</div>