<div class="novel_index">
  <div class="container shadow-sm mx-auto rounded">
    <h1>Novel一覧</h1>
    <div class="all-row">
      <% @novels.each do |novel| %>
        <div class="m-2 p-0 shadow">
          <div class="card">
            <% if novel.image.attached?%>
              <%= image_tag novel.image %>
            <% else %>
              <%= image_tag "pexels-wendy-van-zyl-1112048.jpg" %>
            <% end %>
            <div class="card-body">
              <p class="card-text"><%= link_to novel.title, room_novel_path(novel.room_id,novel.id) %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <%= paginate @novels, theme: 'twitter-bootstrap-4' %>
  </div>
</div>